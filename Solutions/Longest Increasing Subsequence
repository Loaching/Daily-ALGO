#include<bits/stdc++.h>
#define int long long
using namespace std;
int n;
vector<int>a, d;
signed main() {
	ios::sync_with_stdio(0);
	cin.tie(0);
	cin >> n;
	a.resize(n + 1);
	for (int i = 1; i <= n; i++)	cin >> a[i];
	for (int i = 1; i <= n; i++) {
		if (i == 1 or d.back() < a[i]) d.push_back(a[i]);
		else	*lower_bound(d.begin(), d.end(), a[i]) = a[i];
	}
	cout << d.size();
	return 0;
}
/*
什...什么?!直到今天才知道这玩意有$O(n log n)$算法
搞得我很蠢
*/
